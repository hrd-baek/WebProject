<div class="container-fluid px-4">
    <h4 class="mt-2"></h4>
    <div class="row">
        <div class="col">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    공정 현황
                </div>
                <div class="card-body"><img src="/image/modeling_size.png" class="img"
                        style="height: 300px; width: 100%;"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    현재 창고 적재 현황
                </div>
                <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    금일 생산량
                </div>
                <div class="card-body">
                    <div>
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx2 = document.getElementById('myChart');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: [
                    'Blue'
                ],
                datasets: [{
                    label: 'My First Dataset',
                    data: [300],
                    backgroundColor: [
                        'rgb(54, 162, 235)'
                    ],
                    hoverOffset: 4
                }]
            },
        });

    </script>
</div>